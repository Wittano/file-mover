[Unit]
Description=FileBot is simple file manager to automation your boring action with files e.g. moving to trash, another directory or renaming files

[Service]
User=%i
ExecStart=/usr/bin/filebot
Restart=on-failure
RestartSec=1
SuccessExitStatus=3 4
RestartForceExitStatus=3 4

[Install]
WantedBy=multi-user.target